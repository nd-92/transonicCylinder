cutPlanes
{
    type            surfaces;

    libs            (fieldFunctionObjects sampling);

    writeControl    writeTime;

    executeControl  writeTime;

    fields          (U UMean p pMean T TMean rho rhoMean sMean cSqMean LMean F_p F_u);

    surfaceFormat   foam;

    interpolationScheme cellPointFace;
        
    surfaces
    {
        zNormal
        {
            type            cuttingPlane;

            point           (0 0 0);

            normal          (0 0 1);

            interpolate     true;

            surfaceFormat   foam;
        }
    }
}

